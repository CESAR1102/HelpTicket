
@model IEnumerable <HelpTicket.PartialClass.InfoTrabajador>

@{
	Layout = "~/Views/Shared/_Layout_Administrador.cshtml";
	ViewBag.Title = "VerTicketsClientes";
    var contador = 1;
}

<div class="col-lg-12">
	<div class="card shadow mb-4">
		<div class="card-header">
			<h6 class="m-0 font-weight-bold text-dark">HISTORIAL DE TICKETS</h6>
		</div>
		<div class="card-body card-block border-bottom-light">
			@if (ViewBag.mensajeInformativo != null)
			{
				<div class="container">
					<div class="alert alert-warning alert-dismissible">
						<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
						<strong>Atención!</strong> @ViewBag.mensajeInformativo
					</div>
				</div>
			}
                <div class="container">
                    <h2>Ver Trabajadores</h2>
                    <p>Todos los trabajadores disponibles</p>

                    @foreach (var item in Model)
                    {
                        <div class="card-body card-block col-5" style="background-color:antiquewhite; border-radius: 30px; margin:10px; display:inline-block; height:413px; max-height:450px;overflow:auto;">
                            <h5 style="text-align:center;"> <strong>Trabajador @contador</strong></h5>
                            <h6> <strong>Datos Generales</strong></h6>
                            <h6>Codigo : @item.codigo</h6>
                            <h6>Nombre : @item.nombre</h6>
                            <h6>Correo : @item.correo</h6>
                            <br />
                            <h6> <strong>Skills</strong></h6>
                             @foreach (var skill in item.skills)
                             {
                                <h6>Skill : @skill</h6>
                             }
                            <br />
                            <h6> <strong>Resumen de Atención</strong></h6>
                            <h6>Tickets Asignados (Total) : @item.tkAsignados</h6>
                            <h6>Tickets Finalizados (Total) : @item.tkFinalizados</h6>
                        </div>
                        
                    }
                </div>
		</div>
	</div>
</div>

