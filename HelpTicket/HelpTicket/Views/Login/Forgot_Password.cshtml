@model HelpTicket.PartialClass.InputFields
@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
    ViewBag.Title = "Forgot_Password";
}

<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
        <br /> <br /> <br /><br /><br /><br /><br />
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-dark" style="background-image: url('../img/login/LOGO.png') "></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-2">¿Olvidaste  tu contraseña?</h1>
                                <p class="mb-4">Escribe tu usuario y se enviará un mensaje a tu correo electrónico para restablecer  la contraseña.</p>
                                <p class="mb-4" style="color:red; font-size:smaller">Nota: Esto puede tardar unos segundos</p>
                            </div>
                            <!--<form class="user"> -->
                            <!-- <form class="signup-form" action="#" method="post" id="formulario">-->
                            
                                @using (Html.BeginForm("Forgot_Password", "Login", FormMethod.Post, new { @class = "form-group"}))
                                {
                                    <div class="form-group">
                                        @Html.TextBoxFor(d1 => d1.correo, new { @class = "form-control form-control-user", @placeholder = "Enter Email Address...", @id = "campoCorreo" })
                                    </div>
                                    <input type="submit" value="Reset Password" class="btn btn-danger btn-user btn-block" id="botonEnviar" />
                                }
                            
                            <hr>
                            @if (ViewBag.Message != null)
                            {
                                <p class="text-center alert-danger p-1">@ViewBag.Message</p>
                            }

                            <div class="text-center">
                                <a class="small text-danger" href="@Url.Action("Login_", "Login")">Already have an account? Login!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    
</script>

